#include <iostream>

int main() {
    int numero;

    // Solicita um número inteiro ao usuário
    std::cout << "Digite um número inteiro: ";
    std::cin >> numero;

    // Verifica se o número é par ou ímpar
    if (numero % 2 == 0) {
        std::cout << "O número " << numero << " é par." << std::endl;
    } else {
        std::cout << "O número " << numero << " é ímpar." << std::endl;
    }

    return 0;
}
